<%- include('./partials/head') %>

<main>

<section class="intro">
    <% tno.forEach(tno => {%>
       <h1>Exposense</h1>

        <p><%= tno.intro %></p>
        <p><%= tno.content %></p>

        <% tno.chapters.forEach(chapter => {%>

        <article class="popup-cards">
            <button class="close-btn">x</button>
            <h2><%= chapter.title %></h2>
            <p><%- chapter.content %></p>
            <a href="/">Bekijk de video -></a>
        </article>

        <%}) %>

    
    <%}) %>



    <%- include('./partials/svg') %>


</section>

   

<div class="center">
    <!-- <button id="open-popup" class="btn">+</button> -->
</div>
<div class="popup" id="popup">
    <div class="overlay"></div>
    <div class="popup-content">
        <h2>Titel van de popup</h2>
        <p>Content van de popup</p>
        <div class="controls">
            <button class="close-btn">Close</button>
            <button class="submit-btn">submit</button>
        </div>
    </div>
</div>





</main>
